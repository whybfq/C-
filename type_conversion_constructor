#include <iostream>
using namespace std;

class A{
public:
    double a,b;
    A(int i) {
        cout <<  "IntConstructor called " << endl;
        a = i;
        b = 9;
    }
    A(double a1, double b1) { a = a1; b = b1; }
};
int main() {
    A a(7,8);
//    A b = 12;       //类型转换构造函数
    a = 8;     //类型转换构造函数
    cout << a.a << ", " << a.b  << endl;
    return 0;
}

Output:
IntConstructor called 
8, 9

Process finished with exit code 0
