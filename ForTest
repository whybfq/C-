


#include <cstdio>
#include <iostream>
using namespace std;

class TestArrange{
private:
    int m_int;
    char m_ch2;
public:
    long m_Ing;
    char m_ch1;
    TestArrange(){
        m_Ing=0;
        m_ch1='a';
        m_int=0;
        m_ch2='a';
    }
    const int* GetIntAddr(){ return &m_int; }
    const char* GetChar2Addr(){ return &m_ch2; }
};

int main(int argc, char const *argv[]) {
    TestArrange test;
    cout<<"Address of test object: "<<&test<<endl;
    cout<<endl;
    cout<<"Address of m_Ing:"<<&(test.m_Ing)<<endl;
    printf("Address of m_ch1:%p\n",&test.m_ch1);    //use %p to print the address of in standard I/0 in C language
    cout<<"Address of m_int: "<<test.GetIntAddr()<<endl;
    cout<<"Address of m_ch2 :"<<(void*)test.GetChar2Addr()<<endl;

    return 0;
}

Output:

Address of test object: 0x7ffee8d14968

Address of m_Ing:0x7ffee8d14970
Address of m_ch1:0x7ffee8d14978
Address of m_int: 0x7ffee8d14968
Address of m_ch2 :0x7ffee8d1496c
