#include <iostream>
#include <cstdio>
using namespace std;

char *strRemov(char *dst, const char *src, char ch = ' ') {
    int i = -1, j = 0;
    while( src[++i] ){
        if(src[i] != ch){
            dst[j++] = src[i];
        }
        dst[j]='\0';
    }
    return dst;
}

int main() {
    char a[100] = "你 g客 户 好, i a t!", b[100];
    puts(strRemov(b, a));
    cout << b << endl;
    return 0;
}
