#include <iostream>
#include <cstdio>
using namespace std;

char *strRemov(char *dst, const char *src, char ch = ' ') {
    int i = -1, j = 0;
    while( src[++i] ){
        if(src[i] != ch){
            dst[j++] = src[i];
        }
        dst[j]='\0';
    }
    return dst;
}

const int MAX = 500;

int main() {
// input method1 : scanf()
//    char st[MAX];
