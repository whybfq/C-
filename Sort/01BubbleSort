int main(){
    int A[] = { 6, 5, 3, 1, 8, 7, 2, 4 };   // 从小到大定向冒泡排序
    int n = sizeof(A)/sizeof(int);
//    BubbleSort(A,n);
//    CocktailSort(A,n);
//    SelectionSort2(A,n);
//    selection_sort(A,A+n);
//    InsertionSort1(A,n);
//    InsertionSortDichotomy(A,n);
//    ShellSort(A,n);
//    shell(A,n);
    QuickSort1(A,0,n-1);
    cout<<"the resulr of Sort: "<<endl;
    for(int i=0;i<n;++i){
        cout<<A[i]<<" "<<endl;
    }
    cout<<endl;
}

