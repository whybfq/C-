#include <iostream>
#include <cstdio>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <functional>
#include <set>
#include <string>
#include <cmath>
#include <map>
#include <vector>
using namespace std;

class A {
public:
    int i_ = 0;
    void output(int x, int y){
        cout << x << " " << y << endl;
    }
};

int main(int argc, char const *argv[]) {
    A a;
    function<void(int, int)> fr = bind(&A:: output, &a, placeholders::_1,placeholders::_2);
    fr(1,2);  // 1 2
    function<int&(void)> fr_i = bind(&A::i_, &a);
    fr_i() = 123;
    cout << a.i_ <<  endl;  // 123
}
