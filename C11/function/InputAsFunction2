#include <iostream>
#include <cstdio>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <functional>
#include <set>
#include <string>
#include <cmath>
#include <map>
#include <vector>
using namespace std;

void call_when_even(int x, const std::function<void(int) > & f){
    if( !(x & 1)){  // x % 2 == 0
        f(x);
    }
}

void output(int x){
    cout << x << " ";
}

void output_add_2(int x) {
    cout <<  x + 2 << endl;
}

int main(int argc, char const *argv[]) {
    auto fr = std::bind(output, std::placeholders::_1);
    for (int i = 0; i < 10; ++i) {
        call_when_even(i,fr);  // 0 2 4 6 8
    }
    cout << endl;
}
