#include <iostream>
#include <vector>
#include <memory>
using namespace std;

constexpr int GetConst(){ return  1; }  // 常量表达式，使用之前必须先定义

constexpr int f(int x){
    static_assert( 0 == 0, "assert fail .");
    return x;
}

constexpr int k(int x) { return  x = 1; } // is not allowed in C11 but allowed in C14

constexpr int Fibonacci(int n) {  //模版元编程 Template meta-programming
    return(n == 1)?1:(n==2)?1:Fibonacci(n-1)+Fibonacci(n-2);
}

int main(int argc, char const *argv[]) {
    int fib[] = {
            Fibonacci(11),Fibonacci(12),
            Fibonacci(13),Fibonacci(14),
            Fibonacci(15),Fibonacci(16)
    };
    for(int i:fib)cout << i << endl;
}



Output:
89
144
233
377
610
987
