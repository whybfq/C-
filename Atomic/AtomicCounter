#include <atomic>
struct AtomicCounter{
    atomic<int> value;
    void incremet(){
        ++value;
    }
    void de(){
        --value;
    }
    int get(){ return value.load(); }
};


//If you use mutex, this struct looks like this
struct Counter{
    int value;
    std::mutex mutex1;
    void increment(){
        lock_guard<mutex> lock(mutex1);
        ++value;

    }
    void decrement(){
        lock_guard<mutex> lock(mutex);
        --value;
    }
    int get(){
        return value;
    }
};
