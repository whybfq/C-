#include<iostream>
#include<boost>

using namespace std;
using namespace boost;

void GetMemory(char *p,int num)        //there is an errror in this function 
{
    p = (char*)malloc(sizeof(char)*num);  //malloc应该与free（）对应，未释放内存，内存泄露
}

void Test(void)
{
    char *str = NULL;
    GetMemory(str,100);
    strcpy(str,"hello");
    cout << str << endl;
    free(str);
}

int main(int argc, char const *argv[]) {
    Test();
    return 0;
}
